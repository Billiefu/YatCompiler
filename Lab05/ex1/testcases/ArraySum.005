(* 错误类型：语义错误 - 使用未声明的变量 *)
MODULE ArraySum;

TYPE
  IntArray = ARRAY 5 OF INTEGER;

VAR
  arr: IntArray;
  i: INTEGER; (* sum 未声明 *)

BEGIN
  arr[0] := 1;
  arr[1] := 2;
  arr[2] := 3;
  arr[3] := 4;
  arr[4] := 5;

  sum := 0; (* sum 未声明 *)
  i := 0;
  WHILE i < 5 DO
    sum := sum + arr[i];
    i := i + 1
  END
END ArraySum.